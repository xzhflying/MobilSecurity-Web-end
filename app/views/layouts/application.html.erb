<!DOCTYPE html>
<html>
<head>
  <title>Web</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= viewport_meta_tag %>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-header">
    <a class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <a class="navbar-brand" href=<%= page_path('home') %>>三角验证</a>
  </div>
  <ul class= "nav navbar-nav pull-right">
      <%unless user_signed_in?%>
          <li>
            <%= link_to('注册', new_user_registration_path) %>
          </li>
          <li>
            <%= link_to('登录', new_user_session_path)%>
          </li>
      <%else%>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">我的信息<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="<%= user_users_show_path%>">个人信息</a></li>
              <li><a href="#">我绑定的PC</a></li>
              <li><a href="#">我绑定的手机</a></li>
              <li><a href="#">我绑定的NFC</a></li>
              <li class="divider"></li>
              <li><a href="#">用户日志</a></li>
              <li><a href="#">系统设置</a></li>
            </ul>
          </li>
          <li>
            <%= link_to('退出登录', destroy_user_session_path, method: :delete)%>
          </li>
      <%end%>
    </ul>
</div>

  <!--
  <%if notice%>
    <p class="notice"><%= notice %></p>
  <%end%>
  <%if alert%>
    <p class="alert"><%= alert %></p>
  <%end%>
  -->
<%= yield %>

</body>
</html>
